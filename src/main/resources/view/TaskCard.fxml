<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="taskCard" alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefWidth="500.0" spacing="2.0" styleClass="taskCard" stylesheets="@../style/DefaultStyle.css"
      xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1">
    
    <padding>
        <Insets bottom="6.0" left="12.0" right="12.0" top="6.0"/>
    </padding>
    <StackPane>
        <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="spacing">
            <Label fx:id="titleLabel" maxWidth="Infinity" styleClass="titleLabel">
                <font>
                    <Font name="Segoe UI Semibold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="typeLabel" text="Event" textFill="WHITE">
                <font>
                    <Font name="Segoe UI Semilight" size="16.0"/>
                </font>
                <padding>
                    <Insets left="8.0" right="8.0"/>
                </padding>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <styleClass>
                    <String fx:value="highlightedBackground"/>
                    <String fx:value="roundLabel"/>
                </styleClass>
            </Label>
            <Label fx:id="moreInfoLabel" text="More" textFill="WHITE">
                <font>
                    <Font name="Segoe UI Semilight" size="16.0"/>
                </font>
                <padding>
                    <Insets left="8.0" right="8.0"/>
                </padding>
                <styleClass>
                    <String fx:value="lightBackground"/>
                    <String fx:value="roundLabel"/>
                </styleClass>
            </Label>
        </HBox>
        <ImageView fx:id="pinImage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true"
                   styleClass="pinImage" StackPane.alignment="CENTER_RIGHT"/>
    </StackPane>
    <FlowPane fx:id="tagsBox" hgap="4.0">
    </FlowPane>
    <HBox fx:id="descriptionBox" spacing="8.0">
        <VBox.margin>
            <Insets bottom="2.0"/>
        </VBox.margin>
        <styleClass>
            <String fx:value="collapsible"/>
            <String fx:value="spacing"/>
            <String fx:value="subheadingPadding"/>
        </styleClass>
        <padding>
            <Insets left="2.0"/>
        </padding>
        <Label fx:id="descriptionDecoration" maxHeight="Infinity" minWidth="4.0">
            <styleClass>
                <String fx:value="highlightedBackground"/>
                <String fx:value="roundLabel"/>
            </styleClass>
        </Label>
        <Label fx:id="descriptionLabel" lineSpacing="1.0" styleClass="descriptionLabel" wrapText="true">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <font>
                <Font name="Segoe UI" size="18.0"/>
            </font>
        </Label>
    </HBox>
    <FlowPane hgap="16.0" styleClass="spacing">
        <HBox fx:id="dateBox" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" styleClass="spacingSmall">
            <ImageView fx:id="dateImage" fitHeight="2420.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true"
                       styleClass="dateImage" />
            <Label fx:id="dateLabel" maxHeight="Infinity" styleClass="footnoteLabel">
                <font>
                    <Font name="Segoe UI Italic" size="16.0"/>
                </font>
            </Label>
        </HBox>
        <HBox fx:id="locationBox" alignment="CENTER_LEFT" maxWidth="-Infinity" styleClass="spacingSmall">
            <ImageView fx:id="locationImage" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true"
                       styleClass="locationImage">
            </ImageView>
            <Label fx:id="locationLabel" maxHeight="Infinity" maxWidth="-Infinity" styleClass="footnoteLabel">
                <font>
                    <Font name="Segoe UI Italic" size="16.0"/>
                </font>
            </Label>
        </HBox>
    </FlowPane>
</VBox>
